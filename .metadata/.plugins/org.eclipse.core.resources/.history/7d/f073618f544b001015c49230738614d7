package summerpep2.OOPS;

//Encapsulation

public class BankAccount {
    private double balance;  // Encapsulated variable

    public BankAccount(double balance) {
        this.balance = balance;
    }

    // Setter (for depositing money)
    public void deposit(double amount) {
        if (amount > 0) {
            this.balance += amount;
        } else {
            System.out.println("Invalid deposit amount.");
        }
    }

    // Getter (to access balance)
    public double getBalance() {
        return balance;
    }

    public static void main(String[] args) {
        BankAccount bank = new BankAccount(1000);
        System.out.println("Initial Balance: " + bank.getBalance());
        
        bank.deposit(500);  // Depositing money
        System.out.println("After Deposit: " + bank.getBalance());
    }
}
